{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "es2018",
        "lib": [
            "ES2019"
        ],
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true
    }
}